{
  "editor.inlineSuggest.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "workbench.iconTheme": "material-icon-theme",
  "zenMode.fullScreen": false,
  "zenMode.centerLayout": true,
  "zenMode.hideLineNumbers": false,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  },
  "remoteHub.commitDirectlyWarning": "off",
  "security.workspace.trust.enabled": false,
  "files.exclude": {
    "**/.DS_Store": false,
    "**/.git": false,
    "**/.hg": false,
    "**/.svn": false,
    "**/CVS": false,
    "**/Thumbs.db": false
  },
  "[python]": {
    "editor.tabSize": 2,
  },
  "workbench.welcomePage.walkthroughs.openOnInstall": true,
  "explorer.confirmDelete": false,
  "C_Cpp.default.compilerPath": "C:\\MinGW\\bin\\g++.exe",
  "window.newWindowProfile": "Default",
  "explorer.compactFolders": true,
  "explorer.enableDragAndDrop": true,
  "explorer.openEditors.visible": 3,
  "explorer.enableUndo": true,
  "explorer.openEditors.sortOrder": "editorOrder",
  "editor.roundedSelection": true,
  "editor.cursorStyle": "block",
  "editor.minimap.size": "proportional",
  "editor.minimap.autohide": true,
  "editor.minimap.renderCharacters": true,
  "editor.minimap.showSlider": "always",
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "terminal.integrated.fontFamily": "consolas",
  "editor.fontFamily": "Fira Code Retina, consolas",
  "editor.fontWeight": "400",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero'",
  "telemetry.telemetryLevel": "off",
  "workbench.enableExperiments": false,
  "editor.lineHeight": 1.495,
  "editor.fontSize": 13.45,
  "github.copilot.editor.enableAutoCompletions": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.autoSave": "afterDelay",
  "html.format.wrapLineLength": 90,
  "editor.multiCursorModifier": "ctrlCmd",
  "svelte.enable-ts-plugin": true,
  "editor.wrappingStrategy": "advanced",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.autoIndent": "advanced",
  "editor.autoSurround": "brackets",
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingComments": "always",
  "editor.autoClosingQuotes": "always",
  "editor.colorDecorators": true,
  "editor.detectIndentation": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.comments.insertSpace": true,
  "editor.wordWrap": "on",
  "diffEditor.wordWrap": "on",
  "editor.wordWrapColumn": 60,
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.rulers": [90],
  "editor.tabSize": 2,
  "editor.smoothScrolling": true,
  "editor.renderFinalNewline": "dimmed",
  "chat.editor.wordWrap": "on",
  "editor.formatOnSaveMode": "file",
  "editor.guides.indentation": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.highlightActiveIndentation": "always",
  "RainbowBrackets.colorMode": "Independent",
  "RainbowBrackets.forceUniqueOpeningColor": true,
  "RainbowBrackets.showVerticalScopeLine": false,
  "RainbowBrackets.showHorizontalScopeLine": false,
  "RainbowBrackets.depreciation-notice": false,
  "workbench.editor.limit.value": 4,
  "workbench.editor.limit.perEditorGroup": true,

  // git
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  "git.autofetchPeriod": 200,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "workbench.colorTheme": "Kolada"
}